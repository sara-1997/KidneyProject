<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <Toolbar
        android:id="@+id/toolbar"

        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@color/green">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:orientation="horizontal"
            >


            <TextView
                android:id="@+id/title"
                android:layout_width="262dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="false"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/font"
                android:gravity="center"
                android:padding="10dp"
                android:text="Main Menu"
                android:textColor="@android:color/white"
                android:textSize="30sp"


                android:textStyle="bold" />


        </LinearLayout>
    </Toolbar>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@id/toolbar"
        android:layout_marginTop="16dp"
        android:layout_weight="6"
        android:alignmentMode="alignMargins"
        android:background="@android:color/white"
        android:columnCount="2"
        android:columnOrderPreserved="false"

        android:padding="14dp"
        android:rowCount="2">
        <!-- row1 -->

        <!-- column1 -->
        <androidx.cardview.widget.CardView
            android:onClick="VisitManage"
            android:id="@+id/Visit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            tools:targetApi="lollipop">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical"
                >

                <ImageView
                    android:src="@drawable/visit"
                    android:id="@+id/visit"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    >


                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/visit"
                    android:layout_gravity="center"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:text="Visit"
                    android:textColor="@android:color/black"
                    android:textSize="30sp"
                    android:textStyle="bold"

                    />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>
        <!-- column1 -->

        <!-- column1 -->
        <!-- column1 -->
        <androidx.cardview.widget.CardView
                     android:onClick="ListNotification"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                >


                <ImageView
                    android:src="@drawable/notification"
                    android:id="@+id/notification"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    ></ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/notification"
                    android:layout_gravity="center"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:text="Notification"
                    android:textColor="@android:color/black"
                    android:textSize="30sp"
                    android:textStyle="bold"

                    />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>
        <!-- column1 -->

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"

            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:onClick="ListWish"
            app:cardBackgroundColor="@android:color/white"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                >


                <ImageView
                    android:src="@drawable/wish"
                    android:id="@+id/Wish"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    ></ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Wish"
                    android:layout_gravity="center"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:text="Wish"
                    android:textColor="@android:color/black"
                    android:textSize="30sp"
                    android:textStyle="bold"

                    />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:onClick="ListTalent"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical"

                >


                <ImageView
                    android:src="@drawable/talent"
                    android:id="@+id/talent"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    ></ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/talent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:text="talent"
                    android:textColor="@android:color/black"
                    android:textSize="30sp"
                    android:textStyle="bold"

                    />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:id="@+id/ListConsult"
            android:onClick="ListConsult"
            android:layout_marginBottom="16dp"

            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical"

                >


                <ImageView
                    android:src="@drawable/consultation"
                    android:id="@+id/consult"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    ></ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/consult"
                    android:layout_gravity="center"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:text="Consult"
                    android:textColor="@android:color/black"
                    android:textSize="30sp"
                    android:textStyle="bold"

                    />


            </RelativeLayout>



        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"

            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="AddSugisstion"
                android:orientation="vertical"

                >


                <ImageView
                    android:src="@drawable/suggestion"
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    ></ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image"
                    android:layout_gravity="center"
                    android:fontFamily="@font/font"
                    android:gravity="center"

                    android:text="Suggestions"
                    android:textColor="@android:color/black"
                    android:textSize="30sp"
                    android:textStyle="bold"

                    />


            </RelativeLayout>



        </androidx.cardview.widget.CardView>

    </GridLayout>


</RelativeLayout>